<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="russo.it.myappdrusso.SplashScreen">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_splash"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_splash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        android:id="@+id/tv_tipo_layout"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Tecnico di Sviluppo Software"
        android:textStyle="bold"
        android:textSize="@dimen/dim_font_medium"
        android:textAlignment="center"
        android:layout_below="@id/tv_tipo_layout"
        android:id="@+id/tv_nome_corso"
        style="@style/Titolo"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Davide Russo"
        android:layout_below="@id/tv_nome_corso"
        android:id="@+id/tv_nome_candidato"
        style="@style/titolo.sottoTitolo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mauro Bogliaccino"
        android:layout_below="@id/img_splash"
        android:id="@+id/tv_nome_docente"
        style="@style/titolo.sottoTitolo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="aa 2015-2016"
        android:layout_below="@id/tv_nome_docente"
        android:id="@+id/tv_anno_scolastico"
        style="@style/titolo.sottoTitolo"
        />


</RelativeLayout>
